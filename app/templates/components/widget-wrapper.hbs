<p class="control has-icon">
  {{input class="input is-large" value=searchKey type="search" placeholder="Search"}}
    <i class="fa fa-search"></i>
</p>

<div class="box">
  {{#each filteredWords as |word|}}
      <span class="tag is-dark is-large">{{word}}</span>
  {{else}}
      <div class="message is-warning">
          <div class="content is-large">
              <p class="is-large is-centered has-text-centered is-narrow message-header">
                  <i class="fa  fa-meh-o"></i> Nothing matches "{{searchKey}}"
              </p>
          </div>
      </div>
  {{/each}}
</div>